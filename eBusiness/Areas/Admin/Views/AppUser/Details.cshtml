@model eBusiness.Models.AppUser
@using System.Security.Claims

@{
    ViewData["Title"] = "Details";
    var userId = User.FindFirstValue(ClaimTypes.NameIdentifier);
}

<div class="row mb-3">
    <div class="col-12">
        <div class="text-start">
            <h1 class="fw-bolder">My Profile</h1>
        </div>
    </div>
</div>

<form asp-action="Details">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="row m-0">
        <div class="col-4 mb-3">
            <div class="form-group">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" disabled />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4 mb-3">
            <div class="form-group">
                <label asp-for="PhoneNumber" class="form-label"></label>
                <input asp-for="PhoneNumber" class="form-control" disabled />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4 mb-3">
            <div class="form-group">
                <label asp-for="PasswordHash" class="form-label"></label>
                <input asp-for="PasswordHash" class="form-control" disabled />
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="text-end m-3">
        <a asp-action="Edit" asp-route-id="@userId" class="btn btn-primary">Edit</a>
        <a asp-action="Index" class="btn btn-success">Back to List</a>
    </div>
</form>
