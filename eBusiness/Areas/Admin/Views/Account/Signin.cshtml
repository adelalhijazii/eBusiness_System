@model eBusiness.Areas.Admin.ViewModels.Signin

@{
    ViewData["Title"] = "Signin";
    Layout = "~/Areas/Admin/Views/Shared/_AccountLayout.cshtml";
}

<div class="row h-100">
    <div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
        <div class="d-table-cell align-middle">

            <div class="text-center mt-4">
                <h1 class="h2">Welcome back, </h1>
                <p class="lead">
                    Sign in to your account to continue
                </p>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="m-sm-4">
                        <div class="text-center">
                            <img src="~/Admin/assets/img/illustrations/social.png" alt="Chris Wood" class="img-fluid rounded-circle" width="132" height="132" />
                        </div>
                        <form asp-action="Signin">
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label"></label>
                                <input asp-for="Email" class="form-control form-control-lg" placeholder="Enter your Email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Password" class="form-label"></label>
                                <input asp-for="Password" class="form-control form-control-lg" placeholder="Enter your Password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                                <small>
                                    <a href="pages-reset-password.html">Forgot password?</a>
                                </small>
                            </div>
                            <div>
                                <div class="form-check align-items-center">
                                    <input id="customControlInline" class="form-check-input" checked asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                </div>
                            </div>
                            <div class="text-center mt-3">
                                <button type="submit" class="btn btn-lg btn-primary">Sign in</button>
                            </div>
                            <div class="text-center mt-3">
                                <p class="small mb-0">Don't have account? <a href="/Admin/Account/Signup">Create an account</a></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>