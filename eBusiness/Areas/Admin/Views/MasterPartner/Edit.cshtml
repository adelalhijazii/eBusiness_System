@model eBusiness.Areas.Admin.ViewModels.MasterPartnerViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="row mb-3">
    <div class="col-12">
        <div class="text-start">
            <h1 class="fw-bolder">Edit Partner</h1>
        </div>
    </div>
</div>

<form asp-action="Edit" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="MasterPartnerId" />
    <input type="hidden" asp-for="CreateUser" />
    <input type="hidden" asp-for="CreateDate" />
    <div class="row m-0">
        <div class="col-4 mb-3">
            <div class="form-group">
                <label asp-for="MasterPartnerWebsiteUrl" class="form-label"></label>
                <input asp-for="MasterPartnerWebsiteUrl" class="form-control" />
                <span asp-validation-for="MasterPartnerWebsiteUrl" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4 mb-3">
            <div class="form-group">
                <label asp-for="MasterPartnerFile" class="form-label"></label>
                <input asp-for="MasterPartnerFile" class="form-control" onchange="previewImage(this)" />
                <span asp-validation-for="MasterPartnerFile" class="text-danger"></span>
                <input type="hidden" asp-for="MasterPartnerLogoImageUrl" />
            </div>
        </div>
        <div class="col-4 mb-3">
            <div class="form-group">
                <div class="mt-3">
                    <img id="preview" src="@(string.IsNullOrEmpty(Model.MasterPartnerLogoImageUrl) ? "" : Url.Content("~/Pictures/MasterPartner/" + Model.MasterPartnerLogoImageUrl))"
                         class="img-thumbnail" style="max-height: 100px; max-width:100px;" alt="Partner Image" />
                </div>
            </div>
        </div>
        @* <div class="col-4 mb-3">
            <div class="form-group">
                <label asp-for="MasterPartnerFile" class="form-label"></label>
                <input asp-for="MasterPartnerFile" class="form-control" />
                <span asp-validation-for="MasterPartnerFile" class="text-danger"></span>
                <input type="hidden" asp-for="MasterPartnerLogoImageUrl" class="form-control" />
            </div>
        </div> *@
    </div>
    <div class="text-end m-3">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-success">Back to List</a>
    </div>
</form>

<script>
    function previewImage(input) {
        const preview = document.getElementById('preview');
        const file = input.files[0];

        if (file) {
            const reader = new FileReader();
            reader.onload = function (e) {
                preview.src = e.target.result;
            }
            reader.readAsDataURL(file);
        }
    }
</script>
