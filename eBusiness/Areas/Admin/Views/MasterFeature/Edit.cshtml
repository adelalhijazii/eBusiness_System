@model eBusiness.Areas.Admin.ViewModels.MasterFeatureViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="row mb-3">
    <div class="col-12">
        <div class="text-start">
            <h1 class="fw-bolder">Edit Feature</h1>
        </div>
    </div>
</div>

<form asp-action="Edit" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="MasterFeatureId" />
    <input type="hidden" asp-for="CreateUser" />
    <input type="hidden" asp-for="CreateDate" />
    <div class="row m-0">
        <div class="col-4 mb-3">
            <div class="form-group">
                <label asp-for="MasterFeatureTitle" class="form-label"></label>
                <input asp-for="MasterFeatureTitle" class="form-control" />
                <span asp-validation-for="MasterFeatureTitle" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4 mb-3">
            <div class="form-group">
                <label asp-for="MasterFeatureBreef" class="form-label"></label>
                <input asp-for="MasterFeatureBreef" class="form-control" />
                <span asp-validation-for="MasterFeatureBreef" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4 mb-3">
            <div class="form-group">
                <label asp-for="MasterFeatureDescription" class="form-label"></label>
                <textarea asp-for="MasterFeatureDescription" class="form-control" rows="6"></textarea>
                <span asp-validation-for="MasterFeatureDescription" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4 mb-3">
            <div class="form-group">
                <label asp-for="MasterFeatureFile" class="form-label"></label>
                <input asp-for="MasterFeatureFile" class="form-control" onchange="previewImage(this)" />
                <span asp-validation-for="MasterFeatureFile" class="text-danger"></span>
                <input type="hidden" asp-for="MasterFeatureImageUrl" />
            </div>
        </div>
        <div class="col-4 mb-3">
            <div class="form-group">
                <div class="mt-3">
                    <img id="preview" src="@(string.IsNullOrEmpty(Model.MasterFeatureImageUrl) ? "" : Url.Content("~/Pictures/MasterFeature/" + Model.MasterFeatureImageUrl))"
                         class="img-thumbnail" style="max-height: 70px; max-width:70px;" alt="Team Image" />
                </div>
            </div>
        </div>
        @* <div class="col-4 mb-3">
            <div class="form-group">
                <label asp-for="MasterFeatureFile" class="form-label"></label>
                <input asp-for="MasterFeatureFile" class="form-control" />
                <span asp-validation-for="MasterFeatureFile" class="text-danger"></span>
                <input type="hidden" asp-for="MasterFeatureImageUrl" class="form-control" />
            </div>
        </div> *@
    </div>
    <div class="text-end m-3">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-success">Back to List</a>
    </div>
</form>

<script>
    function previewImage(input) {
        const preview = document.getElementById('preview');
        const file = input.files[0];

        if (file) {
            const reader = new FileReader();
            reader.onload = function (e) {
                preview.src = e.target.result;
            }
            reader.readAsDataURL(file);
        }
    }
</script>
